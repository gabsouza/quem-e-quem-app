<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="3dp">

<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ImageView
        android:id="@+id/iv_jogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="6dp"
        android:src="@null"
        android:adjustViewBounds="true"/>
    
    <TextView
        android:textColor="@color/colorPrimaryText"
        android:layout_toRightOf="@+id/iv_jogo"
        android:id="@+id/tv_nome_mini_jogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingRight="16dp"
        android:textSize="16sp"/>

    <TextView
        android:textColor="@color/colorPrimaryText"
        android:layout_below="@+id/tv_nome_mini_jogo"
        android:layout_alignLeft="@id/tv_nome_mini_jogo"
        android:id="@+id/tv_introducao_mini_jogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textSize="12sp"/>

</RelativeLayout>
</android.support.v7.widget.CardView>
