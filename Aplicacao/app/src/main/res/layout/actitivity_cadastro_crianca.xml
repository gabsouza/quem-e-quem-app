<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <android.support.v4.view.ViewPager
        android:layout_height="150dp"
        android:layout_width="210dp"
        android:id = "@+id/viewPager"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="46dp"
        android:layout_above="@+id/et_nome"
        android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:id="@+id/im_microfone"
            android:background="@drawable/icone_microfone"
            android:layout_marginBottom="62dp"
            android:layout_above="@+id/bt_salvar"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/et_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="Nome"
            android:textAlignment="center"
            android:singleLine="true"
            android:layout_marginBottom="51dp"
            android:layout_above="@+id/bt_salvar"
            android:layout_toStartOf="@+id/im_microfone" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bt_salvar"
        android:background="@drawable/borda"
        android:text="Salvar"
        android:textColor="@color/colorTextIcons"
        android:textSize="20dp"
        android:layout_marginBottom="116dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ib_camera"
        android:background="@drawable/bt_redondo"
        android:src="@drawable/camera"
        android:layout_marginEnd="33dp"
        android:layout_alignBottom="@+id/viewPager"
        android:layout_alignEnd="@+id/viewPager" />

</RelativeLayout>