<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_centerHorizontal="true"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/tv_parabens"
        android:text="Parabéns!"
        android:gravity="center|bottom"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/bt_fechar_dialog"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_pontos"
        android:text="pontos!"
        android:gravity="center|bottom"
        android:layout_marginBottom="18dp"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_above="@+id/tv_parabens"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bt_fechar_dialog"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Fechar"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv_vc_fez" />

    <TextView
        android:id="@+id/tv_vc_fez"
        android:text="Você fez"
        android:gravity="center|bottom"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_above="@+id/tv_soma_pontos"
        android:layout_alignStart="@+id/tv_pontos"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="85"
        android:layout_below="@+id/tv_vc_fez"
        android:layout_alignStart="@+id/tv_pontos"
        android:layout_marginTop="32dp"
        android:id="@+id/tv_soma_pontos" />


</RelativeLayout>